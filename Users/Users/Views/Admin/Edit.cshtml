@model Users.ViewModels.IdentityViewModels.EditUserViewModel
@{
    ViewBag.Title = string.Format("Промяна на данните за потребител {0}.", Model.UserName);
}

<h2>@ViewBag.Title</h2>
@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m=>m.UserName)
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { htmlAttributes = new { @class = "label control-label" } })
        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "validation-summary-errors" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { htmlAttributes = new { @class = "label control-label" } })
        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.NewPassword, string.Empty, new { @class = "validation-summary-errors" })
    </div>
    <button type="submit" class="btn btn-primary">Приложи</button>
    @Html.ActionLink("Отказ", "Index", null, new { @class = "btn btn-default" })

}

